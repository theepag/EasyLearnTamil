                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="ஏ"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="ஐ"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="ஒ"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="ஓ"
