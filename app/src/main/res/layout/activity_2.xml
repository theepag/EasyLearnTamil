                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="ஈ"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:text="உ"
                    android:textSize="30sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
